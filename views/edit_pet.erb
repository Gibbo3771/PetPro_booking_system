<h1>Edit <%=@pet.name%></h1>

<form action="/petpro/pets/<%=@pet.id %>" method="post">

<div class="form-el">
  <label for="name">Name: </label>
  <input type="text" name="name" value="<%=@pet.name %>">
</div>

<div class="form-el">
  <label for="owner-name">Owner Name: </label>
  <input type="text" name="owner_name" value = "<%= @pet.owner_name %>">
</div>

<div class="form-el">
  <label for="type">Pet Type: </label>
  <select name="type">
    <option value="Dog">Dog</option>
    <option value="Cat">Cat</option>
    <option value="Rodent">Rodent</option>
    <option value="Exotic">Exotic</option>
    <option value="Other">OSther</option>
  </select>
</div>

<div class="form-el">
  <label for="breed">Breed: </label>
  <input type="text" name="breed" value=<%=@pet.breed%>>
</div>

<div class="form-el">
  <label for="gender">Gender: </label>
  <select name="gender">
    <option value="male">Male</option>
    <option value="female">Female</option>
  </select>
</div>

<div class="form-el">
  <label for="age">Age: </label>
  <input type="number" name="age" value=<%= @pet.age %>>
</div>

<div class="form-el">
  <label for="neutered_or_spayed">Neutered/spayed</label>
  <select name="neutered_or_spayed"%>
    <option value="yes">Yes</option>
    <option value="no">No</option>
  </select>
</div>

<div class="form-el">
  <label for="photo">Photo: </label>
  <input type="text" name="photo" value=<%=@pet.photo%>>
</div>

<div class="form-el">
  <input type='submit' value="Save changes">
</div>

</form>
